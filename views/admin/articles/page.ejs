<%- include('../../partials/header.ejs'); -%>
<%- include('../../partials/homeNavbar'); %>

<main class="container">

  <div class="p-4 p-md-5 mt-5 mb-5 text-dark rounded" style="background-color:  #eee;">
    <div >
      <h1 class="display-4">Bem-Vindo !</h1>
      <p class="lead my-3">Este é um simples blog para apaixonados por tecnologia.</p>
      <hr>
      <a href="/admin/categories/edit/<%= category.id %>" class="btn btn-warning">Editar<a/>
      </div>
  </div>

  <% result.articles.rows.forEach(function(article){ %>
    <div class="card mt-5">
      <div class="card-header">
        <h5 class="card-title"><%= article.title %></h5>
      </div>
      <div class="card-body">
        <a href="/<%= article.slug %>" class="btn btn-success">Ler Artigo</a> 
      </div>
    </div>

  <% }); %>


 
    <nav aria-label="..." class="mt-5">
      <ul class="d-flex flex-row pagination justify-content-between">
        <% if(result.page > 2) {%>
          <li class="page-item" data-previous>
            <a class="page-link" href="/article/page/<%= result.page - 1 %>" tabindex="-1">Previous</a>
          </li>
        <% } else if(result.page == 2) { %>
          <li class="page-item" data-previous>
            <a class="page-link" href="/" tabindex="-1">Previous</a>
          </li>
        <% } %>
        
       
        <% if(result.next) {%>
          <a class="page-link" href="/article/page/<%= result.page + 1 %>">Next</a>
        <% } %>
        </li>
      </ul>
    </nav>
  
  
</main>


